<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="15dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingBottom="15dp"
            android:orientation="horizontal">
            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/player1_profile"
                android:layout_width="105dp"
                android:layout_height="110dp"
                android:gravity="end"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:gravity="center"/>
            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/player2_profile"
                android:layout_width="105dp"
                android:layout_height="110dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/player1_playId"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="Player1 ID"/>
                <ImageView
                    android:id="@+id/player1_race_symbol"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="end"
                    android:src="@drawable/terran_symbol"/>
            </LinearLayout>
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:textStyle="bold"
                android:textColor="#FFBB00"
                android:gravity="center"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/player2_race_symbol"
                    android:layout_width="15dp"
                    android:layout_gravity="left"
                    android:layout_height="15dp"
                    android:src="@drawable/zerg_symbol"/>
                <TextView
                    android:id="@+id/player2_playId"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Player2 ID"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/player1_name"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="player1name"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#FFBB00"
                android:text="@string/label_player_name"/>
            <TextView
                android:id="@+id/player2_name"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="player2name"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/player1_team"
                android:layout_width="120dp"
                android:gravity="end"
                android:layout_height="wrap_content"
                android:text="SKT T1"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#FFBB00"
                android:text="@string/label_player_team"/>
            <TextView
                android:id="@+id/player2_team"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="SAMSUNG Galaxy"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="25dp">
        <view
            class="org.nhnnext.android.battleapp.util.BarChart"
            android:id="@+id/target_score_bar"
            android:minWidth="20dp"
            android:minHeight="500dp"
            android:layout_width="match_parent"
            android:layout_height="500dp"/>
    </LinearLayout>
</LinearLayout>