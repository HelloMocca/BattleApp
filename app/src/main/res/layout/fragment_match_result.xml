<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="15dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingBottom="15dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/player1_profile"
                android:layout_width="105dp"
                android:layout_height="110dp"
                android:gravity="end"
                android:src="@drawable/noprofile"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:gravity="center"/>
            <ImageView
                android:id="@+id/player2_profile"
                android:layout_width="105dp"
                android:layout_height="110dp"
                android:src="@drawable/noprofile"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/player1_name"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="player1name"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:gravity="center"
                android:text="@string/label_player_name"/>
            <TextView
                android:id="@+id/player2_name"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="player2name"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/player1_playId"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="IDNS"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:gravity="center"
                android:text="@string/label_player_id"/>
            <TextView
                android:id="@+id/player2_playId"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="IDNS"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/player1_team"
                android:layout_width="120dp"
                android:gravity="end"
                android:layout_height="wrap_content"
                android:text="SKT T1"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:gravity="center"
                android:text="@string/label_player_team"/>
            <TextView
                android:id="@+id/player2_team"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="SAMSUNG Galaxy"/>
        </LinearLayout>

        <!--<ImageView-->
            <!--android:id="@+id/player1_image"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content" />-->
        <!--<ImageView-->
            <!--android:id="@+id/versus_image"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content" />-->
        <!--<ImageView-->
            <!--android:id="@+id/player2_image"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content" />-->
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="25dp">
        <view
            class="org.nhnnext.android.battleapp.BarChart"
            android:id="@+id/target_score_bar"
            android:minWidth="20dp"
            android:minHeight="500dp"
            android:layout_width="match_parent"
            android:layout_height="500dp"/>
    </LinearLayout>
</LinearLayout>